				cardName = "Developer Tools",
				locator1 = "CustomerPortalSite#CARD_NAME");

			AssertElementPresent(
				locator1 = "CustomerPortalSite#TABLE_HEAD",
				title = "Provisioned",
				value1 = "Provisioned");
		}

