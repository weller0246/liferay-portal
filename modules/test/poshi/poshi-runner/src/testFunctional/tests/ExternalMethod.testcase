@component-name = "portal-tools"
definition {

	property poshi.runner.acceptance = "true";
	property testray.main.component.name = "Smoke";

	@disable-webdriver = "true"
	@priority = "5"
	test ExecuteMethodInMacro {
		ExternalMethod.executeMethodInMacro();
	}

	@disable-webdriver = "true"
	@priority = "5"
	test ExecuteMethodStringArguments {
		var expected = "test,string,";
		var actual = com.liferay.poshi.runner.util.StringUtil.add("test", "string");

		ExternalMethod.validateMatch(
			actual = "${actual}",
			expected = "${expected}");

		var expected = "TestString";
		var actual = com.liferay.poshi.runner.util.StringUtil.extractChars("Test String");

		ExternalMethod.validateMatch(
			actual = "${actual}",
			expected = "${expected}");
	}

	@disable-webdriver = "true"
	@priority = "5"
	test ExecuteMethodVariableArguments {
		var argument1 = "test";
		var argument2 = "string";
		var expected = "test,string,";
		var actual = com.liferay.poshi.runner.util.StringUtil.add("${argument1}", "${argument2}");

		ExternalMethod.validateMatch(
			actual = "${actual}",
			expected = "${expected}");

		var argument = "Test String";
		var expected = "TestString";
		var actual = com.liferay.poshi.runner.util.StringUtil.extractChars("${argument}");

		ExternalMethod.validateMatch(
			actual = "${actual}",
			expected = "${expected}");
	}

	@disable-webdriver = "true"
	@priority = "5"
	test ExecuteMethodVariableReturn {
		var expected = "test,string,";
		var returnVariable = "actual";
		var returnVariable = com.liferay.poshi.core.util.StringUtil.add("test", "string");

		ExternalMethod.validateMatch(
			actual = "${actual}",
			expected = "${expected}");

		var expected = "TestString";
		var returnVariable = "actual";
		var returnVariable = com.liferay.poshi.core.util.StringUtil.extractChars("Test String");

		ExternalMethod.validateMatch(
			actual = "${actual}",
			expected = "${expected}");
	}

}