<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder auto-import-default-references="false" auto-namespace-tables="false" dependency-injector="ds" mvcc-enabled="true" package-path="com.liferay.custom.elements" short-no-such-exception-enabled="false">
	<namespace>CustomElements</namespace>
	<entity local-service="true" name="CustomElementsPortletDescriptor" remote-service="false" table="CustomElementsPortletDesc" uuid="true">

		<!-- PK fields -->

		<column db-name="customElementsPortletDescId" name="customElementsPortletDescriptorId" primary="true" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column method-name="CSSURLs" name="cssURLs" type="String" />
		<column method-name="HTMLElementName" name="htmlElementName" type="String" />
		<column name="instanceable" type="boolean" />
		<column name="name" type="String" />
		<column name="properties" type="String" />
	</entity>
	<entity local-service="true" name="CustomElementsSource" remote-service="false" uuid="true">

		<!-- PK fields -->

		<column name="customElementsSourceId" primary="true" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column method-name="HTMLElementName" name="htmlElementName" type="String" />
		<column name="name" type="String" />
		<column method-name="URLs" name="urls" type="String" />

		<!-- Finder methods -->

		<finder name="CompanyId" return-type="Collection">
			<finder-column name="companyId" />
		</finder>
		<finder name="C_H" return-type="CustomElementsSource" unique="true">
			<finder-column name="companyId" />
			<finder-column name="htmlElementName" />
		</finder>
	</entity>
	<exceptions>
		<exception>CustomElementsSourceHTMLElementName</exception>
		<exception>DuplicateCustomElementsSource</exception>
	</exceptions>
</service-builder>