<c:if test="<%= hasPermission %>">
	<div id="item-finder-root-channel"></div>

	<liferay-frontend:component
		context='<%=
			HashMapBuilder.<String, Object>put(
				"commerceOrderTypeId", commerceOrderTypeId
			).put(
				"datasetId", CommerceOrderDataSetConstants.COMMERCE_DATA_SET_KEY_ORDER_TYPE_QUALIFIER_CHANNELS
			).put(
				"orderTypeExternalReferenceCode", HtmlUtil.escapeJS(commerceOrderType.getExternalReferenceCode())
			).put(
				"rootPortletId", portletDisplay.getRootPortletId()
			).put(
				"spritemap", themeDisplay.getPathThemeImages() + "/lexicon/icons.svg"
			).build()
		%>'
		module="js/channels"
	/>

	<commerce-ui:panel
		bodyClasses="p-0"
		title='<%= LanguageUtil.get(request, "channels") %>'
	>
		<clay:headless-data-set-display
			apiURL="<%= commerceOrderTypeQualifiersDisplayContext.getCommerceOrderTypeChannelsApiURL() %>"
			clayDataSetActionDropdownItems="<%= commerceOrderTypeQualifiersDisplayContext.getCommerceOrderTypeChannelClayDataSetActionDropdownItems() %>"
			formId="fm"
			id="<%= CommerceOrderDataSetConstants.COMMERCE_DATA_SET_KEY_ORDER_TYPE_QUALIFIER_CHANNELS %>"
			itemsPerPage="<%= 10 %>"
			namespace="<%= liferayPortletResponse.getNamespace() %>"
			pageNumber="<%= 1 %>"
			portletURL="<%= currentURLObj %>"
		/>
	</commerce-ui:panel>
</c:if>