@component-name = "portal-wcm"
definition {

	property portal.release = "true";
	property portal.upstream = "true";
	property testray.main.component.name = "Fragments";

	setUp {
		task ("Set up instance and sign in") {
			TestCase.setUpPortalInstance();

			User.firstLoginPG();
		}

		task ("Add a site") {
			JSONGroup.addGroup(groupName = "Test Site Name");
		}

		task ("Add a content page") {
			JSONLayout.addPublicLayout(
				groupName = "Test Site Name",
				layoutName = "Test Page Name",
				type = "content");
		}

		task ("Add a fragment collection") {
			JSONFragment.addFragmentCollection(
				groupName = "Test Site Name",
				name = "Collection Name");
		}

		task ("Navigate to the fragment collection") {
			FragmentsAdminNavigator.openFragmentsAdmin(siteURLKey = "test-site-name");

			FragmentsAdminNavigator.gotoCollection(collectionName = "Collection Name");
		}
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
		else {
			JSONGroup.deleteGroupByName(groupName = "Test Site Name");
		}
	}

	@description = "This is a test for LPS-164104. View fragment with fragmentEntryLinkNamespace variable to JavaScript on content page."
	@priority = "4"
	test AddFragmentWithFragmentEntryLinkNamespaceInJavaScriptToContentPage {
		task ("Given a page creator has a fragment with fragmentEntryLinkNamespace in JavaScript") {
			FragmentsAdmin.addFragment(fragmentName = "Fragment Name");

			var htmlSnippet = '''
<div class="fragment-name">
    <div id="fragment-${fragmentEntryLinkNamespace}"></div>
</div>''';

			FragmentsEditor.typeHtmlEditor(content = "${htmlSnippet}");

			FragmentsEditor.waitForAutoSave();

			var jsSnippet = '''
const element = document.getElementById(`fragment-${fragmentEntryLinkNamespace}`);
element.textContent = 'Fragment Example';''';

			FragmentsEditor.waitForAutoSave();

			FragmentsEditor.typeJsEditor(content = "${jsSnippet}");

			FragmentsEditor.publish();
		}

		task ("When the page creator adds the new fragment to a content page") {
			ContentPagesNavigator.openEditContentPage(
				pageName = "Test Page Name",
				siteName = "Test Site Name");

			PageEditor.addFragment(
				collectionName = "Collection Name",
				fragmentName = "Fragment Name");
		}

		task ("Then the page creator sees the content of new fragment") {
			AssertTextEquals(
				index = "1",
				key_fragmentName = "Fragment Name",
				locator1 = "Fragment#FRAGMENT_CONTENT",
				value1 = "Fragment Example");

			PageEditor.publish();
		}

		task ("When the page creator navigates to the content page at view mode") {
			ContentPagesNavigator.openViewContentPage(
				pageName = "Test Page Name",
				siteName = "Test Site Name");
		}

		task ("Then the page creators sees the content of new fragment") {
			AssertTextEquals(
				fragmentName = "fragment-name",
				index = "1",
				locator1 = "Fragment#FRAGMENT_BODY",
				value1 = "Fragment Example");
		}
	}

	@description = "This is a test for LPS-164104. View fragment with fragmentEntryLinkNamespace variable to JavaScript on associated display page template."
	@priority = "4"
	test AddFragmentWithFragmentEntryLinkNamespaceInJavaScriptToDisplayPageTemplate {
		property testray.component.names = "Display Pages,Fragments";

		task ("Given a page creator has a fragment with fragmentEntryLinkNamespace in JavaScript") {
			FragmentsAdmin.addFragment(fragmentName = "Fragment Name");

			var htmlSnippet = '''
<div class="fragment-name">
    <div id="fragment-${fragmentEntryLinkNamespace}"></div>
</div>''';

			FragmentsEditor.typeHtmlEditor(content = "${htmlSnippet}");

			FragmentsEditor.waitForAutoSave();

			var jsSnippet = '''
const element = document.getElementById(`fragment-${fragmentEntryLinkNamespace}`);
element.textContent = 'Fragment Example';''';

			FragmentsEditor.waitForAutoSave();

			FragmentsEditor.typeJsEditor(content = "${jsSnippet}");

			FragmentsEditor.publish();
		}

		task ("When the page creator adds the new fragment to a display page template") {
			JSONLayoutpagetemplate.addDisplayPageTemplateEntry(
				contentType = "Web Content Article",
				displayPageTemplateEntryName = "Display Page Name",
				groupName = "Test Site Name",
				subType = "Basic Web Content");

			DisplayPageTemplatesAdmin.openDisplayPagesAdmin(siteURLKey = "test-site-name");

			DisplayPageTemplatesAdmin.gotoDisplayPage(displayPageName = "Display Page Name");

			PageEditor.addFragment(
				collectionName = "Collection Name",
				fragmentName = "Fragment Name");
		}

		task ("Then the page creator sees the content of new fragment") {
			AssertTextEquals(
				index = "1",
