definition {

	macro click {
		Click.mouseDownMouseUp(
			key_text = "${button}",
			locator1 = "Button#ANY");
	}

	macro clickAdd {
		Button.click(button = "Add");

		SelectFrameTop();

		if (IsElementPresent(locator1 = "Modal#MODAL_SHOW")) {
			SelectFrame(locator1 = "IFrame#MODAL_BODY");
		}
	}

