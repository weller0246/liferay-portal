		SelectFrame(locator1 = "IFrame#MODAL_BODY");

		Check(
			key_checkboxName = "${roleName}",
			locator1 = "Checkbox#ENABLE_CHECKBOX");

		SelectFrame(value1 = "relative=top");

		Button.clickAdd();

