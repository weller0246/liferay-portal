	macro viewMembers {
		var key_memberName = "${memberName}";

		Click(
			key_text = "View Members",
			locator1 = "Button#ANY");

		SelectFrame.selectFrameNoLoading(locator1 = "IFrame#MODAL_BODY");

		if (!(isSet(memberNameList))) {
			var memberNameList = "${memberName}";
		}

